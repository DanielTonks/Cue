<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="uk.co.danieltonks.nfc.MainActivity">

    <RelativeLayout
        android:id="@+id/standard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/raleway_light"
            android:text="Tap a Cue enabled NFC tag to join a queue"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Button"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="266dp" />

        <ImageView
            android:id="@+id/helpImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@android:drawable/ic_menu_help" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inQueue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <TextView
            android:id="@+id/queueDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/queuePosition"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="24dp"
            android:fontFamily="@font/raleway_light"
            android:text="You are in queue position"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/queuePosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:fontFamily="@font/roboto_bold"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="120sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/averageWaitTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/queuePosition"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/raleway_light"
            android:text="Your table will be ready in approximately 24 minutes"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </RelativeLayout>


</LinearLayout>
